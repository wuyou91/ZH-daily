/* pages/news/news.wxss */
.news{
    width: 100%;
}
.header{
    position: relative;
    width: 100%;
}
.header-img{
    width: 100%;    
}
.img-source{
    position: absolute;
    right: 40rpx;
    bottom: 20rpx;
    font-size: 20rpx;
    color: rgba(255,255,255,.6);
    text-shadow: 0px 1px 2px rgba(0,0,0,.3);
}
.title{
    position: absolute;
    left: 10rpx;
    bottom: 50rpx;
    color: #fff;
    line-height: 1.3;
    font-size: 50rpx;
    padding: 0 40rpx;
    font-weight: bold;
    text-shadow: 0px 1px 2px rgba(0,0,0,0.3);
}
.content{
    width: 100%;
    box-sizing: border-box;
    padding: 20px;
}