scroll-view{
  height: 100vh;
}
.banner {
  width: 100%;
  height: 500rpx;
}
.banner swiper-item .banner-item-text {
  position: absolute;
  padding: 0 40rpx;
  font-size: 40rpx;
  color: #fff;
  bottom: 40rpx;
  z-index: 2;
}
.banner swiper-item .banner-item-image {
  position: absolute;
  top: -160rpx;
  width: 750rpx;
  height: 750rpx;
  z-index: 1;
}

.today-news{
  padding: 20rpx;
  background: #efefef;
}
.today-news .title{
  color: #9c9c9c;
  margin: 20rpx;
}
.today-news .news-list{
  margin: 20rpx;
}
.news-list-item{
  padding: 20rpx 25rpx;
  display: flex;
  border-radius: 10rpx;
  background: #fff;
  box-shadow: 0 2px 2px 0 rgba(0,0,0,.1)
}
.news-list-item text{
  display: block;
  width: 500rpx;
}
.news-list-item image{
  display: block;
  width: 160rpx;
  height: 160rpx;
}